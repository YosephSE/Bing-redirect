{
  "manifest_version": 3,
  "name": "Bing to Google Redirect",
  "version": "1.0",
  "description": "Redirects Bing searches to Google.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://www.bing.com/search*"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
