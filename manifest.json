{
    "manifest_version": 3,
    "name": "BNG",
    "version": "1.0",
    "description": "Redirect any search engine to your favorite.",
    "permissions": [
      "storage",
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "settings.html"
  }